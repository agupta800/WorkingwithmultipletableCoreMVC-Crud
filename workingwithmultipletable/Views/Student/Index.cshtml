@model IEnumerable<workingwithmultipletable.ViewModel.ViewModelSummary>

@*  @model workingwithmultipletable.ViewModel.EmpListVM
 *@@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a class="btn bg-primary align-content-center" asp-action="Add" asp-controller="Student">Add</a> 
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-8 ">

            <table class="table table-bordered text-center">
                <thread>
                    <tr>
                        <th>EmployeeId</th>
                        @* <th>First Name</th>
                        <th>Middle Name</th>
                        <th>Last Name</th> *@
                        <th>Name</th>
                        <th>Department Id</th>
                        <th>Department Name</th>
                        <th>Department Code</th>
                        <th>Action</th>
                    </tr>
                </thread>

                @foreach(var items in Model)
                {
                    <tr>
                        <td>@items.EmpId</td>
                      @*   <td>@items.FirstName</td>
                        <td>@items.MiddleName</td>
                        <td>@items.LastName</td> *@
                        <td>@items.FullName</td>
                        <td>@items.DepartmentId</td>
                        <td>@items.DepartmentName</td>
                        <td>@items.DepartmentCode</td>
                        <td>
                            <div class="btn-group" role="group">

                            <a class="btn btn-danger" asp-action="Delete" onclick="return confirm('Are you sure want to delete')" asp-controller="Student" asp-route-id="@items.EmpId">Delete</a>&nbsp;
                            <a class="btn btn-warning" asp-action="Edit" asp-controller="Student" asp-route-id="@items.EmpId">Edit</a>
                            <a class="btn btn-primary" asp-action="Details" asp-controller="Student" asp-route-id="@items.EmpId">Details</a>
                            </div>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>






