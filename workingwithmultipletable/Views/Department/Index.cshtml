@model IEnumerable<workingwithmultipletable.Models.Department>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashBoard.cshtml";
}

<h1>Index</h1>




<h1>Index</h1>
<a class="btn bg-primary" asp-action="Add" asp-controller="Department">Add</a>

<div class="container">
    <div class="row">
        <div class="col-8 ">

            <table class="table table-bordered text-center">
                <thread>
                    <tr>
                      
                        <th>Department Id</th>
                        <th>Department Name</th>
                        <th>Department Code</th>
                        <th>Action</th>
                    </tr>
                </thread>

                @foreach (var items in Model)
                {
                    <tr>
                   
                        <td>@items.DepartmentId</td>
                        <td>@items.DepartmentName</td>
                        <td>@items.DepartmentCode</td>
                        <td>
                            <div class="btn-group" role="group">

                                <a class="btn btn-danger" asp-action="Delete" asp-controller="Department" asp-route-id="@items.DepartmentId">Delete</a>&nbsp;
                                <a class="btn btn-warning" asp-action="Edit" asp-controller="Department" asp-route-id="@items.DepartmentId">Edit</a>
                            </div>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>






